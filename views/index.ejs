<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Gallery</title>
    <link rel="shortcut icon" href="/images/icon.png" type="image/x-icon">
    <!-- Bootstrap CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- semantic ui css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" integrity="sha512-8bHTC73gkZ7rZ7vpqUQThUDhqcNFyYi2xgDgPDHc+GXVGHXq+xPjynxIopALmOPqzo9JZj0k6OqqewdGO3EsrQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- image preview -->
    <link href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css" rel="stylesheet"/>
    <!-- filepond css -->
    <link href="https://unpkg.com/filepond/dist/filepond.css" rel="stylesheet" />
    <!-- Custom style -->
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <div class="ui pointing menu sticky-top">
        <!-- container for links -->
        <div class="container">
            <a class="active item">Home</a>
            <a class="item">Popular</a>
            <a class="item">Favorite</a>
            <div class="right menu">
                <div class="item">
                    <div class="ui transparent icon input">
                        <input type="text" placeholder="Search...">
                        <i class="search link icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- form here -->
    <div class="ui container py-4">
        <form action="/add" method="post" class="ui form">
            <div class="ui fields two">
                <div class="field">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" required>
                </div>
                <div class="ui field">
                    <label for="type">Genre</label>
                    <select name="type" id="type">
                        <option value="action">Action</option>
                        <option value="adventure">Adventure</option>
                        <option value="animation">Animation</option>
                        <option value="comedy">Comedy</option>
                        <option value="crime">Crime</option>
                        <option value="drama">Drama</option>
                        <option value="fantasy">Fantasy</option>
                        <option value="horror">Horror</option>
                        <option value="mystery">Mystery</option>
                        <option value="romance">Romance</option>
                        <option value="sci-fi">Sci-Fi</option>
                        <option value="thriller">Thriller</option>
                        <option value="war">War</option>
                    </select>
                </div>
            </div>
            <div class="ui field mb-4">
                <label for="img">Poster</label>
                <input type="file" name="img" id="img" class="filepond" accept="images/*" required>
            </div>
            <div class="ui field">
                <button class="ui button green" type="submit">Upload Now</button>
            </div>
        </form>
    </div>
    <div class="ui container">
        <% if(movie) { %>
            <div class="ui small stackable images d-flex">
                <% movie.forEach(m => { %>
                    <div class="poster-container">
                        <img title="<%= m.name %>" src="<%= m.imgSrc %>" alt="movie_poster" class="ui image">
                        <a href="https://www.google.com/search?q=<%= m.name %>" target="_blank">
                            <div class="shading">
                                <p><%= m.name %></p>
                                <p><%= m.type %></p>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
    <!-- Copyright -->
    <footer class="text-center mt-4 p-4" style="background-color: rgba(0, 0, 0, 0.05);">
        Â© 2022 Copyright:
        <a class="text-reset fw-bold" href="https://github.com/MERN-Coders">MERN-Coders</a>
    </footer>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- semantic ui js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js" integrity="sha512-dqw6X88iGgZlTsONxZK9ePmJEFrmHwpuMrsUChjAw1mRUhUITE5QU9pkcSox+ynfLhL15Sv2al5A0LVyDCmtUw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- file encode -->
    <script src="https://unpkg.com/filepond-plugin-file-encode/dist/filepond-plugin-file-encode.js"></script>
    <!-- image preview -->
    <script src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>
    <!-- image resize -->
    <script src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js"></script>
    <!-- filepond js -->
    <script src="https://unpkg.com/filepond/dist/filepond.js"></script>
    <!-- custom js -->
    <script src="/scripts/main.js" load ></script>
</body>
</html>